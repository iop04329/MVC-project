@model Razor.Models.Card
<div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
    <div class="card">
        <div class="headshot">
            @*<img class="card-img-top" src="~/Assets//images/MarkZuckerberg.jpg" alt="" />*@
            <img class="card-img-top" src="~/Assets//images/@Model.Photo" alt="" />

        </div>
        <div class="card-block">
            @*<h3 class="card-title">Mark Zuckerberg</h3>*@
            <h3 class="card-title">@Model.Name</h3>
            @*<p class="card-text">Facebook創辦人 馬克˙祖伯克</p>*@
            <p class="card-text">@Model.Brief</p>
            @*<a href="https://goo.gl/BktGGA" class="btn btn-primary">Wiki</a>*@
            <a href="@Model.WikiUrl" class="btn btn-primary">Wiki</a>
        </div>
    </div>
</div> 
